<?xml version="1.0" encoding="utf-8"?>
<manifest xmlns:android="http://schemas.android.com/apk/res/android"
    package="com.college.placementportal">

    <uses-permission android:name="android.permission.INTERNET" />

    <application
        android:allowBackup="true"
        android:icon="@mipmap/ic_launcher"
        android:label="@string/app_name"
        android:roundIcon="@mipmap/ic_launcher_round"
        android:supportsRtl="true"
        android:theme="@style/Theme.PlacementPortal">
        <activity
            android:name=".activities.user.ChangePasswordActivity"
            android:exported="true" />
        <activity
            android:name=".activities.user.MyProfileActivity"
            android:exported="true" />
        <activity
            android:name=".activities.user.RulesActivity"
            android:exported="true" />
        <activity
            android:name=".activities.user.HomeActivity"
            android:exported="true" />
        <activity
            android:name=".activities.DisplayCompanyActivity"
            android:exported="true" />
        <activity
            android:name=".activities.admin.AddCompanyActivity"
            android:exported="true" />
        <activity
            android:name=".activities.admin.AdminDashboardActivity"
            android:exported="true" />
        <activity
            android:name=".activities.user.UserDashboardActivity"
            android:exported="true" />
        <activity
            android:name=".activities.user.UpdateProfileActivity"
            android:exported="true" />
        <activity
            android:name=".activities.user.RegisterCompanyActivity"
            android:exported="true" />
        <activity
            android:name=".auth.CreateAccountActivity"
            android:exported="true" />
        <activity
            android:name=".auth.ForgotPasswordActivity"
            android:exported="true" />
        <activity
            android:name=".auth.SigninActivity"
            android:exported="true" />
        <activity
            android:name=".MainActivity"
            android:exported="true">
            <intent-filter>
                <action android:name="android.intent.action.MAIN" />

                <category android:name="android.intent.category.LAUNCHER" />
            </intent-filter>
        </activity>

        <meta-data
            android:name="preloaded_fonts"
            android:resource="@array/preloaded_fonts" />
    </application>

</manifest>